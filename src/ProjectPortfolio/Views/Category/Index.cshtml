@model IEnumerable<ProjectPortfolio.Models.ProjectCategory>

<h1>Categories</h1>

<p><a asp-controller="Category" asp-action="Add">Add Category</a></p>

<ul>
    @foreach (var category in Model)
    {
        <li>
            <a asp-controller="Project"
               asp-action="Category"
               asp-route-id="@category.ID">@category.Name</a>
        </li>
    }
</ul>
<p><a asp-controller="Category" asp-action="Remove">Remove Category</a></p>